rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Each user has their own data space
    match /users/{userId}/journals/{journalId} {
      // Only the logged-in user can read/write their own journals
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // (Optional) If you later store user profile info
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
